@using BookManagement.Constant;
@using BookManagement.Models.Model
@model ConfirmPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đặt lại mật khẩu - Book Store</title>

    <link href="~/img/logo-img.jpeg" rel="icon">
    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">
    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/assets/vendor/fonts/boxicons.css" />
    <link href="~/css/toast.css" rel="stylesheet" />
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block" style="align-self: center; text-align: -webkit-center;">
                                <div class="bg-logo-image"></div>
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center mb-1">
                                        <h1 class="h4 text-gray-900 mb-2">Đặt lại mật khẩu</h1>
                                    </div>
                                    @using (Html.BeginForm(FormMethod.Post, new { @class = "user register-form", role = "form" }))
                                    {
                                        @Html.HiddenFor(m => m.Key)
                                        @Html.HiddenFor(m => m.UserId)
                                        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                                        <div class="form-group form-password-toggle mt-4">
                                            <div class="input-group input-group-merge">
                                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-user", @id = "inp-password", @required = "required", @placeholder = "Mật khẩu" })
                                                <span class="btn-user input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                            </div>
                                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group form-password-toggle">
                                            <div class="input-group input-group-merge">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user", @id = "inp-re-password", @required = "required", @placeholder = "Nhập lại mật khẩu" })
                                                <span class="btn-user input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                            </div>
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <input type="submit" class="mt-3 btn btn-primary btn-user btn-block" value="Xác nhận">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>